<% layout('./layouts/boilerplate.ejs') %> <!-- used to link to boilerplate(ejs-mate) -->

    <body>
        <div class="row offset-2">
            <h3 class="mb-3">Create a new Listing</h3>
            <form action="/listings" method="post" novalidate class="needs-validation">  <!-- added bootstrap validation-->
                <!--novaliudate is a boolean attribute to disable default validation-->

                <div class="col-8">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input type="text" placeholder="Enter title" class="form-control" name="listing[title]"
                            required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid title.</div>
                    </div><br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea cols="30" rows="10" placeholder="enter description" class="form-control"
                            name="listing[description]" style="height: 4.5rem;" required></textarea>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a small description</div>
                    </div><br>
                    <div>
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" placeholder="Enter image link" class="form-control" name="listing[image]"
                            required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid image URL.</div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" placeholder="Enter price" class="form-control" name="listing[price]"
                                required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a valid price.</div>
                        </div><br>
                        <div class="col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" placeholder="Enter country" class="form-control" name="listing[country]"
                                required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a valid country.</div>
                        </div>
                    </div><br>
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input type="text" placeholder="Enter location" class="form-control" name="listing[location]"
                            required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid location.</div>
                    </div><br>

                </div>
                <button type="submit" class="btn btn-dark">Add</button>
        </div>


        </form>
    </body>