<% layout('./layouts/boilerplate.ejs') %>
<!-- used to link to boilerplate(ejs-mate) -->
<div class="row offset-3 mb-3">
  <h3 class="mb-3">Create a new Listing</h3>
  <form
    action="/listings"
    method="post"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data"
  >
    <!-- added bootstrap validation-->
    <!--novalidate is a boolean attribute to disable default validation-->

    <div class="col-8">
      <div>
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          placeholder="Enter title"
          class="form-control"
          name="listing[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a valid title.</div>
      </div>
      <br />
      <div>
        <label for="description" class="form-label">Description</label>
        <textarea
          cols="30"
          rows="10"
          placeholder="enter description"
          class="form-control"
          name="listing[description]"
          style="height: 4.5rem"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a small description</div>
      </div>
      <br />
      <div>
        <label for="image" class="form-label">Select an image</label>
        <input
          type="file"
          class="form-control"
          name="listing[image]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please select a image.</div>
      </div>
      <br />
      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            placeholder="Enter price"
            class="form-control"
            name="listing[price]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>
        <br />
        <div class="col-md-4">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            placeholder="Enter country"
            class="form-control"
            name="listing[country]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid country name.</div>
        </div>
        <div class="col-md-4">
          <label for="category" class="form-label">Category</label>
          <select id="category" class="form-control" name="listing[category]">
            <option value="rooms">Room</option>
            <option value="cabins">Cabin</option>
            <option value="camps">Camp</option>
            <option value="mountains">Mountain Side</option>
            <option value="farms">Farm</option>
            <option value="castles">Castle</option>
            <option value="pools">Pool</option>
            <option value="beaches">Beach Point</option>
            <option value="cities">Cities</option>
            <option value="scenery">Scenery</option>
            <option value="river">River Side</option>
          </select>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please select one option.</div>
        </div>
      </div>
      <br />
      <div>
        <label for="location" class="form-label">City</label>
        <input
          type="text"
          placeholder="Enter location"
          class="form-control"
          name="listing[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a valid city name.</div>
      </div>
      <br />
    </div>
    <button type="submit" class="btn btn-danger">Add</button>
  </form>
</div>
